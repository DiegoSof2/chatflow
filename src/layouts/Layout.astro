---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  activePage?: 'home' | 'blog';
}

const { title, description = 'Automatize o atendimento do seu neg√≥cio no WhatsApp.', activePage } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preconnect reduz lat√™ncia dos servidores de fonte -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Carrega fonte de forma ass√≠ncrona ‚Äî n√£o bloqueia renderiza√ß√£o -->
    <link rel="preload" as="style"
      href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,600;0,9..144,700;0,9..144,900;1,9..144,700&family=Epilogue:wght@300;400;500;600&display=swap"
      onload="this.onload=null;this.rel='stylesheet'" />
    <noscript>
      <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,600;0,9..144,700;0,9..144,900;1,9..144,700&family=Epilogue:wght@300;400;500;600&display=swap" />
    </noscript>

    <ViewTransitions />
  </head>
  <body>

    <nav>
      <a href="/" class="nav-logo">Chat<span>.</span>Flow</a>
      <div class="nav-right">
        <a href="/" class:list={['nav-link', { active: activePage === 'home' }]}>Home</a>
        <a href="/blog" class:list={['nav-link', { active: activePage === 'blog' }]}>Blog</a>
        <a href="/#planos" class="nav-link">Planos</a>
        <a href="/#contato" class="nav-cta">Falar com especialista ‚Üí</a>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer>
      <div class="footer-inner">
        <a href="/" class="footer-brand">Chat<span>.</span>Flow</a>
        <div class="footer-links">
          <a href="/">Home</a>
          <a href="/#planos">Planos</a>
          <a href="/blog">Blog</a>
          <a href="/#contato">Contato</a>
        </div>
      </div>
    </footer>

    <a href="https://wa.me/55XXXXXXXXXXX" class="wa-btn" target="_blank" title="Falar pelo WhatsApp">üí¨</a>

    <style>
      .wa-btn {
        position: fixed;
        bottom: 1.75rem;
        right: 1.75rem;
        z-index: 90;
        background: var(--green);
        color: #fff;
        width: 56px; height: 56px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        text-decoration: none;
        box-shadow: 0 4px 20px rgba(26,92,56,0.4);
        transition: all 0.25s;
      }
      .wa-btn:hover { transform: scale(1.1); }
    </style>

    <script>
      // Reveal on scroll ‚Äî runs after every page transition
      function initReveal() {
        const obs = new IntersectionObserver(entries => {
          entries.forEach(e => {
            if (e.isIntersecting) { e.target.classList.add('vis'); obs.unobserve(e.target); }
          });
        }, { threshold: 0.08 });
        document.querySelectorAll('.reveal').forEach(el => {
          el.classList.remove('vis');
          obs.observe(el);
        });
      }
      document.addEventListener('astro:page-load', initReveal);
      // Tamb√©m roda na carga inicial da p√°gina (astro:page-load s√≥ √© garantido em navega√ß√µes)
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initReveal);
      } else {
        initReveal();
      }
    </script>

  </body>
</html>
